extends layout

block content
	article.post
		header
			.title
				h2
					a(href='/post/' + post._id + '/' + slugify(post.title))= post.title
				p
			.meta
				time.published= moment(post.createdAt).format('LLL')
				a.author(href='/author/' + post.author.username)
					span.name= post.author.fullName
					img(src=post.author.avatar, alt='')
		span.image.featured
			img(src="http://lorempixel.com/1280/480/", alt='')
		
		each paragraph in post.content.split('\n')
			p= paragraph

		footer
			ul.stats
				li
					a(href='/category/' + post.category)= post.category
				li
					a.icon.fa-heart(href='/like/' + post._id)= post.likes
				li
					a.icon.fa-comment(href='/post/' + post._id + '#comments')= post.comments